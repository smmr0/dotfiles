[user]
	name = Summer ☀️
	email = git@summerm.dev
[core]
	editor = vim
	hooksPath = ~/.config/git/hooks
	excludesfile = ~/.gitignore_global
	autocrlf = input
	pager = less -F
[init]
	defaultBranch = main
[push]
	default = simple
[pull]
	rebase = false
[fetch]
	prune = true
[merge]
	conflictStyle = diff3
[commit]
	verbose = 2
[gpg]
	program = gpg2
[include]
	path = ~/.gitconfig.local
