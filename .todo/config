export TODO_FILE="$TODO_DIR/todo.txt"
export DONE_FILE="$TODO_DIR/done.txt"
export REPORT_FILE="$TODO_DIR/report.txt"
export TODOTXT_AUTO_ARCHIVE=0
export TODOTXT_PRESERVE_LINE_NUMBERS=0
export TODOTXT_DATE_ON_ADD=1
if [ -x "$TODO_ACTIONS_DIR/future" ]; then
	export TODOTXT_DEFAULT_ACTION=future
else
	export TODOTXT_DEFAULT_ACTION=ls
fi

export COLOR_NUMBER=$CYAN
export COLOR_DATE=$PURPLE
export COLOR_PROJECT=$LIGHT_PURPLE
export COLOR_CONTEXT=$LIGHT_GREEN
export COLOR_META=$YELLOW
export COLOR_DONE='\\033[9m'
